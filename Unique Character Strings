#include <bits/stdc++.h>
using namespace std;

int fun(vector<string> v,int i,string s){
    if(i==v.size()){
        int freq[26]={0};
        for(int i=0;i<s.length();i++){
            if(freq[s[i]-'a']==1) return 0;
            freq[s[i]-'a']++;
        }
        return s.length();
    }

    int op1,op2;
    op1=op2=INT_MIN;
    if(s.length()+v[i].length()<=26){
        op1=fun(v,i+1,s+v[i]);
    }
    op2=fun(v,i+1,s);

    return max(op1,op2);
}

int UniqueString(vector<string> v){
    string s="";
    return fun(v,0,s);
}

int main(){
    int n;
    cin>>n;
    vector<string> v;
    string s;
    for(int i=0;i<n;i++){
        cin>>s;
        v.push_back(s);
    }

    int ans=UniqueString(v);
    cout<<ans<<endl;

return 0;}
